{
    "name": "bustabot",
    "description": "Telegram Chat Bot.",
    "version": "1.0.0",
    "private": true,
    "license": "MIT",
    "author": "Ricardo Bustamante",
    "main": "./app.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/RicardoBusta/Bustabot"
    },
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "deploy": "gcloud app deploy",
        "deploy-and-log": "gcloud app deploy && gcloud app logs tail -s default",
        "start": "node ./app.js prod",
        "start-dev": "tsc -p . && node ./app.js dev",
        "gcp-build": "tsc -p .",
        "gcp-clean": "tsc --build --clean",
        "test": "mocha -r ts-node/register tests/**/*.test.ts",
        "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
    },
    "dependencies": {
        "@google-cloud/firestore": "^7.6.0",
        "@types/bent": "^7.3.8",
        "@types/express": "^4.17.17",
        "@types/node-telegram-bot-api": "^0.57.7",
        "bent": "^7.3.12",
        "express": "^4.21.0",
        "node-forge": ">=1.3.1",
        "seedrandom": "^3.0.5"
    },
    "devDependencies": {
        "@types/chai": "^4.3.4",
        "@types/mocha": "^9.1.1",
        "@types/seedrandom": "^3.0.5",
        "chai": "^4.3.7",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "cloud-repo-tools": {
        "test": {
            "app": {
                "msg": "Hello, world!"
            }
        },
        "requiresKeyFile": true,
        "requiresProjectId": true
    }
}
